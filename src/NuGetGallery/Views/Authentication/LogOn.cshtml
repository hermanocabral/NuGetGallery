@model SignInOrRegisterRequest
@using System.Linq.Expressions
@{
    ViewBag.Title = "Sign In";
}

<div id="SignIn">
    <h1>Sign In</h1>

    @Html.Partial("_SignInForm", Model == null ? null : Model.SignInRequest)
</div>

<div id="MiddleSeparator"></div>

<div id="Register">
    <h1>Register</h1>

    @Html.Partial("_RegisterForm", Model == null ? null : Model.SignInRequest)
</div>